@font-face {
    font-family: 'Alegreya';
    src: url(<%= asset_path('AlegreyaSC-Regular-webfont.eot') %>);
    src: url(<%= asset_path('AlegreyaSC-Regular-webfont.eot?#iefix') %>) format('embedded-opentype'),
         url(<%= asset_path('AlegreyaSC-Regular-webfont.woff') %>) format('woff'),
         url(<%= asset_path('AlegreyaSC-Regular-webfont.ttf') %>) format('truetype'),
         url(<%= asset_path('AlegreyaSC-Regular-webfont.svg#AlegreyaRegular') %>) format('svg');
    font-weight: normal;
    font-style: normal;
}

body, h1, h2, h3, h4, h5, h6, h2.slide-text {
	font-family: 'Alegreya' !important;
	font-weight: normal !important;
}

html, body {
	height: 100%;
}

.main-wrapper {
  min-height: 100%;
  height: auto !important;
  height: 100%;
}

h1.title-section {
	font-size: 1.9em;
}

.social-team {
	margin-left: 2px;
	margin-top: -4px;
	margin-bottom: -3px;
}

.call-now {
	margin-left: -2px;
}

.pinterest-image {
	height: 20px;
	width: auto;
}

.product-description {
	border-left: 2px solid !important;
	border-right: 2px solid !important;
	border-radius: 0.5em !important;
	margin-left: auto !important;
	margin-right: auto !important;
	display: block !important;
	margin-bottom: 35px !important;
	margin-top: 5px !important;
	font-size: 0.9em !important;
}
.description-wrapper {
	padding: 15px !important;
	padding-top: 8px !important;
}
.main-price {
	padding: 15px !important;
	padding-top: 5px !important;
	clear:both !important;
}
.text-div p {
		margin-bottom: 1.5em !important;
		color: #AAA;
}

@media only screen and (max-width: 42em) {
	.product-description {
		width: 260px !important;
	}
	.logo-wrapper {
		visibility: hidden;
		width: 0px;
		padding: 0px;
	}	
	h1 {
		font-size: 1.5em;
	}
	h1.title-section {
		font-size: 1.6em !important;
	}
	h3 {
		font-size: 1.0em;
	}
	.fa-lg {
		font-size: 1.2em !important;
		margin-right: 23px !important;
	}
	#main-logo {
		visibility: hidden !important;
		height: 0px !important;
	}
	#navigation {
		padding: 0 !important;
		height: 130px !important;
		padding-left: 30px;
	}
	.sticky-wrapper {
		height: 130px !important;
	}
	#top-right {
		width: 100%;
		float: right;
		padding-top: 10px;
	}
	#top-right-wrapped {
		float: none !important;
		text-align: center !important;
		width: 100% !important;
		padding-left: 0 !important;
		margin-top: 4px;
		padding-right: 0px;
	}
	.fa-la-left {
		margin-left: 18px;
	}
	h1.title-section {
		font-size: 1.5em !important;
	}	
	.portfolio-item {
		width: 60% !important;
		left: 20% !important;
	}
	.text-div p {
		font-size: 1.6em !important;
		margin-bottom: 1.5em !important;
	}
}

@media only screen and (min-width: 42em) {
	.product-description {
		width: 400px !important;
	}
	.logo-wrapper {
		visibility: visible;
		width: 400px;
		padding-right: 30px;
	}	
	#main-logo {
		height: 165px;
		padding-left: 30px;
	}
	.stick-wrapper {
		height: 206px !important;
	}
	#top-right {
		width: 0;
		float: right;
		padding-top: 10px;
	}
	#top-right-wrapped {
		float: right !important;
		text-align: 0 !important;
		width: 380px !important;
		padding-left: 30px !important;
		margin-top: 4px;
		padding-right: 0px;
	}
	.fa-la-left {
		margin-left: 0;
	}
	.portfolio-item {
		width: 49.5% !important;
	}
	.text-div p {
		font-size: 1.6em !important;
		margin-bottom: 1.5em !important;
	}
}

